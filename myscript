#!/bin/bash

# Variables
WEB_DIR="/var/www/html"

# Update and upgrade the system
sudo yum update -y

# Install Nginx
sudo yum install nginx -y

# Start and enable Nginx
sudo systemctl start nginx
sudo systemctl enable nginx

# Install MariaDB (MySQL replacement)
sudo yum install mariadb-server -y

# Start and enable MariaDB
sudo systemctl start mariadb
sudo systemctl enable mariadb

# Secure MariaDB installation
sudo mysql_secure_installation

# Install PHP and required extensions
sudo yum install php php-mysqlnd -y

# Install Git
sudo yum install git -y

# Configure Nginx to use PHP processor
sudo tee /etc/nginx/conf.d/default.conf > /dev/null <<EOL
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.php index.html index.htm;

    server_name _;

    location / {
        try_files \$uri \$uri/ =404;
    }

    location ~ \.php\$ {
        include fastcgi_params;
        fastcgi_pass unix:/run/php-fpm/www.sock;
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME \$document_root\$fastcgi_script_name;
    }

    location ~ /\.ht {
        deny all;
    }
}
EOL

# Test the Nginx configuration and reload
sudo nginx -t
sudo systemctl reload nginx

# Deploy a simple website
if [ -d "$WEB_DIR" ]; then
    sudo rm -rf $WEB_DIR/*
else
    sudo mkdir -p $WEB_DIR
fi

# Create a simple PHP file
sudo tee $WEB_DIR/index.php > /dev/null <<EOL
<!DOCTYPE html>
<html>
<head>
    <title>LEMP Stack</title>
</head>
<body>
    <h1>Welcome to the LEMP Stack!</h1>
    <p>This page is served by Nginx and PHP is working correctly.</p>
    <p>Current date and time: <?php echo date('Y-m-d H:i:s'); ?></p>
</body>
</html>
EOL

# Set proper permissions
sudo chown -R nginx:nginx $WEB_DIR
sudo chmod -R 755 $WEB_DIR

# Check installation
echo "Checking installations..."

# Check Nginx
if nginx -v 2>&1 | grep -q "nginx"; then
    echo "Nginx is installed."
else
    echo "Nginx is NOT installed."
fi

# Check MariaDB
if mysql --version 2>&1 | grep -q "mysql"; then
    echo "MariaDB is installed."
else
    echo "MariaDB is NOT installed."
fi

# Check PHP
if php -v 2>&1 | grep -q "PHP"; then
    echo "PHP is installed."
else
    echo "PHP is NOT installed."
fi

# Check Git
if git --version 2>&1 | grep -q "git"; then
    echo "Git is installed."
else
    echo "Git is NOT installed."
fi

echo "LEMP stack installation and website deployment check complete."
